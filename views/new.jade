doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title t.d3fc.io
    link(rel='stylesheet', href='bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='site.css')
    link(rel='icon', type='image/png' href='https://d3fc.io/images/favicon-16x16.png' sizes='16x16')
    link(rel='icon', type='image/png' href='https://d3fc.io/images/favicon-32x32.png' sizes='32x32')
    link(rel='icon', type='image/png' href='https://d3fc.io/images/favicon-96x96.png' sizes='96x96')
  body.container
    script(type='text/javascript', src='lazyload/lazyload.min.js')
    div
      div.header.clearfix
        nav
          ul.nav.navbar-nav
            li
              a.brand.text-muted(href='/') t.d3fc.io
            li
              a.active(href='/new') New
            li
              a(href='/playground') Playground
      div.marketing
        each status in statuses
          div.row
            div.col-sm-12
              div.thumbnail
                div.iframe-wrapper
                  iframe(
                    src='loading',
                    data-src='item/'+status.id_str,
                    onload='lzld(this)',
                    sandbox='allow-scripts'
                  )
                div.caption
                  h3
                    a(href='https://twitter.com/'+status.user.screen_name)
                      =status.user.name
                  pre=status.es6
                  p
                    span(class='glyphicon glyphicon-retweet', aria-hidden="true")
                    =' '+status.retweet_count
                    |&nbsp;
                    |&nbsp;
                    span(class='glyphicon glyphicon-heart', aria-hidden="true")
                    =' '+status.favorite_count
                  p
                    a.btn.btn-primary(
                      href='https://twitter.com/'+status.user.screen_name +'/status/'+status.id_str
                    ) View Tweet


      footer.footer
        p Piggy-backing the infrastructure of&nbsp;
          a(href='https://d3fc.io/') d3fc
          |&nbsp;since 2016
